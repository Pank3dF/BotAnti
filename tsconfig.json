{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "bot.ts"],
	"exclude": ["node_modules", "dist"]
}
